<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4664fa" >


<Button
    android:id="@+id/buttonMod1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/mod1"
    android:layout_alignParentLeft="true"/>

<TextView
    android:id="@+id/textview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="@string/hint1"
    android:layout_alignParentRight="true"
    android:layout_toEndOf="@+id/buttonMod1"
    android:layout_alignBaseline="@+id/buttonMod1"/>

<Button
    android:id="@+id/buttonMod2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/mod2"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/buttonMod1" />

<TextView
    android:id="@+id/textview2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="@string/hint2"
    android:layout_alignParentRight="true"
    android:layout_toEndOf="@+id/buttonMod2"
    android:layout_below="@+id/textview1"
    android:layout_alignRight="@+id/buttonMod2"
    android:layout_alignBaseline="@+id/buttonMod2"/>


</RelativeLayout>
